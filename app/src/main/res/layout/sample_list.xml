<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    android:layout_margin="10dp"
    android:padding="2dp"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_id"
        android:visibility="gone"
        />



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:weightSum="5"
       >

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight=".8"
           android:textColor="@color/black"
           android:fontFamily="@font/comfortaa"
           android:text="Systol"
           android:textStyle="bold"
           android:textAlignment="center"
           android:textSize="12sp" />

       <TextView

           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight=".8"
           android:fontFamily="@font/comfortaa"
           android:text="Diastol"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textAlignment="center"
           android:textSize="12sp" />

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1.4"
           android:fontFamily="@font/comfortaa"
           android:text="Pressure-Status"
           android:textStyle="bold"
           android:textAlignment="center"
           android:textColor="@color/black"
           android:textSize="12sp" />

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight=".6"
           android:fontFamily="@font/comfortaa"
           android:text="Pulse"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textAlignment="center"
           android:textSize="12sp" />

       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1.4"
           android:fontFamily="@font/comfortaa"
           android:text="Pulse Status"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textAlignment="center"
           android:textSize="12sp" />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/systol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:fontFamily="@font/comfortaa"
            android:text="150"
            android:textColor="@color/black"
            android:textAlignment="center"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/diastol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:fontFamily="@font/comfortaa"
            android:text="70"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pressure_stat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:fontFamily="@font/comfortaa"
            android:text="high"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pulse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:fontFamily="@font/comfortaa"
            android:text="50"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pulse_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:fontFamily="@font/comfortaa"
            android:text="normal"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="16sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/comments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:fontFamily="@font/comfortaa"
            android:text="Comments:  sitting"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.925"
            android:fontFamily="@font/comfortaa"
            android:text="Date:  Fri, 17 June, 2020"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.425"
            android:fontFamily="@font/comfortaa"
            android:text="Time:  8:00 AM"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />


    </LinearLayout>



</LinearLayout>